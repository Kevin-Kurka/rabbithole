# Test Environment Configuration
# Copy this to .env.test and customize for your test environment

# Test Database Configuration
# IMPORTANT: Use a separate database for tests to avoid data loss
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/rabbithole_test_db

# Alternative: Use in-memory SQLite for fast isolated tests
# TEST_DATABASE_URL=sqlite::memory:

# Redis Configuration for Test PubSub (optional)
TEST_REDIS_HOST=localhost
TEST_REDIS_PORT=6379

# Node Environment
NODE_ENV=test

# Logging
LOG_LEVEL=error
