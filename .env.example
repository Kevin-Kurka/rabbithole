# Rabbit Hole - Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# SECURITY - REQUIRED
# ============================================================================

# JWT Secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-this-to-something-random

# NextAuth Secret for frontend authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-this-to-something-random

# ============================================================================
# APPLICATION URLs
# ============================================================================

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3001

# NextAuth URL (where frontend is hosted)
NEXTAUTH_URL=http://localhost:3001

# Backend GraphQL API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# Backend WebSocket URL (for frontend subscriptions)
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql

# ============================================================================
# AI/ML FEATURES - Optional
# ============================================================================

# OpenAI API Key (for AI-assisted features and vector embeddings)
# Required for: AI fact-checking, evidence suggestions, challenge facilitation
OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Node environment (development, production, test)
NODE_ENV=development
