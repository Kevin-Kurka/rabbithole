# Rabbit Hole - Environment Variables
# Copy this file to .env and fill in the values

# ============================================================================
# SECURITY - REQUIRED
# ============================================================================

# JWT Secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-change-this-to-something-random

# NextAuth Secret for frontend authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-this-to-something-random

# ============================================================================
# APPLICATION URLs
# ============================================================================

# Frontend URL (for CORS configuration)
FRONTEND_URL=http://localhost:3001

# NextAuth URL (where frontend is hosted)
NEXTAUTH_URL=http://localhost:3001

# Backend GraphQL API URL (for frontend)
NEXT_PUBLIC_API_URL=http://localhost:4000/graphql

# Backend WebSocket URL (for frontend subscriptions)
NEXT_PUBLIC_WS_URL=ws://localhost:4000/graphql

# ============================================================================
# AI/ML FEATURES - Optional
# ============================================================================

# Ollama Configuration (for local AI models - FREE and PRIVATE)
# Install: https://ollama.ai
# Start: ollama serve
# Pull model: ollama pull llama3.2
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# AI Temperature (0.0 = deterministic, 1.0 = creative)
AI_TEMPERATURE=0.7

# AI Max Tokens per request
AI_MAX_TOKENS=1000

# OpenAI API Key (alternative to Ollama, for vector embeddings)
# Optional: Only needed if using OpenAI instead of Ollama
# OPENAI_API_KEY=your-openai-api-key-here

# ============================================================================
# DEPLOYMENT ENVIRONMENT
# ============================================================================

# Node environment (development, production, test)
NODE_ENV=development
